            android:name="com.example.blackfriday.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="FridayNoActivity"></activity>
        <activity android:name="FridayYesActivity"></activity>
        <activity android:name="divinationActivity"></activity>
        <activity android:name="sendWeiboActivity"></activity>
        <activity android:name="fridayAdviceActivity"></activity>
